{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "typeRoots": ["./src/types/*", "./node_modules/@types"]
  },
  "include": [
    "src/**/*",
    "src/**/*.ts",
    "trash/office.ts",
    "./src/types/*.d.ts"
  ],
  "exclude": ["./coverage", "./build", "__tests__", "jest.config.js"]
}
